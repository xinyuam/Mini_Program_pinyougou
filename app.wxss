@import "./styles/iconfont.wxss";
/* 在微信小程序中 不支持 通配符 '*' */
page,view,text,swiper,swpier-item,image,navigator{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
/* 主题颜色 通过变量来实现
    less中 支持变量、原生的css和wxss也是支持变量*/
page{
    /* 定义主题颜色 */
    --themeColor:#70ae52;
    /* 定义同意字体大小 假设设计稿是 375px 1px=2rpx 14px=28rpx */
    font-size: 28rpx;
}
image{
    width: 100%;
}